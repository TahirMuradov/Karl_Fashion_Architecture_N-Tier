
@{
    Layout = "_AuthLayout";
}
@model LoginDTO
<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <form method="post">
                            <div class="form-floating mb-3">
                                <input class="form-control" asp-for=Email id="inputEmail" type="email" placeholder="name@example.com" />
                                <label asp-for=Email for="inputEmail">Email address</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control" id="inputPassword" type="password" placeholder="Password" />
                                <label asp-for=Password for="inputPassword">Password</label>
                            </div>
                            <div class="form-check mb-3">
                                <input asp-for="RememberMe" name="RememberMe" class="form-check-input" id="inputRememberPassword" type="checkbox"/>
                                <label asp-for="RememberMe"  class="form-check-label" for="inputRememberPassword">Remember Password</label>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a class="small" asp-action="ForgotPassword">Forgot Password?</a>
                                <button class="btn btn-primary" type="submit">Login</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a asp-controller="Auth" asp-action="Register">Need an account? Sign up!</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>