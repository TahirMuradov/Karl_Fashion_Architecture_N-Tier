@model AddShippingMethodDTO


<form method="post">
    <div asp-validation-summary="All"></div>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item active" role="presentation">
            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="false">AZ</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">RU</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">US</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="form-group">
                <input type="text" class="form-control" asp-for="ShippingContent" name="ShippingContent" placeholder="Shipping Content in AZ" />
                <input type="hidden" asp-for="LangCode"  value="az" name="LangCode" />
            </div>
        </div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <div class="form-group">
                <input type="text" class="form-control" asp-for="ShippingContent" name="ShippingContent" placeholder="Shipping Content in RU" />
                <input type="hidden" asp-for="LangCode" value="ru" name="LangCode" />
            </div>
        </div>
        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
            <div class="form-group">
                <input type="text" class="form-control" asp-for="ShippingContent" name="ShippingContent" placeholder="Shipping Content in US" />
                <input type="hidden" asp-for="LangCode" value="en" name="LangCode" />
            </div>
        </div>
    </div>
  
    <div class="form-group">
        <input class="form-control" type="number" value="" asp-for="DeliveryPrice"/>

    </div>

    <input type="submit" value="Create" class="btn btn-dark" />
</form>
