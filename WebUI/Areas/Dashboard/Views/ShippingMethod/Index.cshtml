
@model List<GetShippingMethodDTO>
<a class="btn btn-outline-success" asp-action="create">Create</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Content</th>
            <th scope="col">Delivery Price</th>
            <th scope="col">Actions</th>
         
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            int counter = i + 1;
            <tr>
            <th scope="row">@counter</th>
            <td>@Model[i].Content</td>
                <td>@Model[i].Price &#x20BC</td>
                <td><button onclick="displayAlert('@Model[i].Id')" class="btn btn-outline-danger" ><i class="fa-solid fa-trash"></i></button></td>
       
        </tr>
        }
   
    </tbody>
</table>