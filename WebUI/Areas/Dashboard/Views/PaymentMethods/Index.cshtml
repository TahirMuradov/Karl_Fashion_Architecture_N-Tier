@model List<GetPaymentMethodDTO>
<a class="btn btn-outline-success" asp-area="dashboard" asp-controller="paymentmethods" asp-action="create">Create</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th >#</th>
            <th >Id</th>
            <th >Content</th>
            <th >Api</th>
            <th >Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            var counter = 0;
        }
        @foreach (var Method in Model)
        {
            counter++;
            <tr scope="row">
            <td >@counter</td>
            <td>@Method.Id</td>
                <td>@Method.Content</td>
                <td>@Method.Api</td>
                <td><a class="btn btn-outline-danger" href="/dashboard/paymentmethods/Delete?id=@Method.Id">Delete</a></td>

           
        </tr>
        }
      
    </tbody>
</table>
